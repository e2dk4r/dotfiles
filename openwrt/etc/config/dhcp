# https://openwrt.org/docs/guide-user/base-system/dhcp
config dnsmasq
  option port '0'
  option noresolv '1'
  option nohosts '1'
  option leasefile '/tmp/dhcp.leases'
  list server '<DNS_SERVER_IP>'

config dhcp 'lan'
  option interface 'lan'
  option start '100'
  option limit '150'
  option leasetime '12h'
  option dhcpv4 'server'
  option dhcpv6 'server'
  option ra 'server'
  option ra_slaac '1'
  list ra_flags 'none'
  list dhcp_option 'option:dns-server,<DNS_SERVER_IP>'
  list dhcp_option 'option:ntp-server,<NTP_SERVER_IP>'
  list dhcp_option 'option:tftp-server-address,<TFTP_SERVER_IP>'

config dhcp 'wan'
  option interface 'wan'
  option ignore '1'

config odhcpd 'odhcpd'
  option maindhcp '0'
  option leasefile '/tmp/odhcpd.leases'
  option leasetrigger '/usr/sbin/odhcpd-update'
  option loglevel '4'
  option hostsdir '/tmp/hosts'
  option piodir '/tmp/odhcpd-piodir'

